<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kat.finalproject_newbrews.BeerInfo2"
    android:background="#ff000000"
    android:columnCount="1"
    android:columnOrderPreserved="false">

    <LinearLayout
        android:id="@+id/restLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:id="@+id/imageView10"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <Space
        android:layout_gravity="fill"/>

    <RelativeLayout>
        <Button
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:background="@drawable/navhomefinal"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="15dp"
            android:onClick="beerinfo2homeOnClick"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:background="@drawable/navbackfinal"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/button2"
            android:layout_marginRight="5dp"
            android:onClick="beerinfo2backOnClick" />
    </RelativeLayout>

</GridLayout>
