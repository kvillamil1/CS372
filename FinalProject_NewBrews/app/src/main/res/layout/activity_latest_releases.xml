<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kat.finalproject_newbrews.LatestReleases"
    android:background="#ff000000"
    android:columnCount="1"
    android:columnOrderPreserved="false">

    <LinearLayout
        android:id="@+id/latestLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:background="@drawable/logo"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:background="@drawable/releasebutton"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="top" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">
        <LinearLayout
            android:id="@+id/lrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_row="7"
        android:layout_column="0">

        <Button
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:background="@drawable/navhomefinal"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="10dp"
            android:onClick="latesthomeOnClick" />

        <Button
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:background="@drawable/navbackfinal"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/button2"
            android:layout_marginRight="5dp"
            android:onClick="latestbackOnClick" />

    </RelativeLayout>
</GridLayout>
