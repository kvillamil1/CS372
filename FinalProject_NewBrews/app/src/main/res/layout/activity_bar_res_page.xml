<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kat.finalproject_newbrews.BarResPage"
    android:background="#ff000000"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:rowOrderPreserved="false">

    <LinearLayout
        android:id="@+id/restLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="0"
        android:layout_column="0">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:id="@+id/imageView10"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <GridLayout
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center">

        <TextView android:autoText="true"
            android:text="TITLE"
            android:textColor="#ffffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center" />

        <TextView android:autoText="false"
            android:text="Phone"
            android:textColor="#ffffffff"
            android:textAlignment="center"
            android:textStyle="normal"
            android:typeface="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="center"
            android:id="@+id/phone"
            android:phoneNumber="true" />

        <TextView android:autoText="false"
            android:text="Address"
            android:textColor="#ffffffff"
            android:textAlignment="center"
            android:typeface="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_gravity="center"
            android:id="@+id/address"
            android:textStyle="normal"
            android:autoLink="map"/>

        <ScrollView
            android:layout_column="0"
            android:layout_row="20"
            android:layout_gravity="center">
            <TextView android:autoText="false"
                android:text="Description"
                android:textColor="#ffffffff"
                android:textAlignment="center"
                android:typeface="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:id="@+id/description"
                android:textStyle="normal"
                android:nestedScrollingEnabled="false"
                android:gravity="center" />
        </ScrollView>


    </GridLayout>

    <RelativeLayout
        android:layout_row="3"
        android:layout_column="0">
        <Button
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:background="@drawable/navhomefinal"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="10dp"
            android:onClick="brhomeOnClick"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:background="@drawable/navbackfinal"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/button2"
            android:layout_marginRight="5dp"
            android:onClick="brbackOnClick" />
    </RelativeLayout>

</GridLayout>
